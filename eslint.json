{
    "globals": {

    },
    "env": {
        "browser": true
    },
    "rules": {
        "quotes": [2, "single", "avoid-escape"],
        "no-empty":  0,
        "no-nested-ternary": 2,
        "no-warning-comments": [1, { "terms": ["todo", "fixme", "eslint", "global"], "location": "anywhere" }],
        "no-irregular-whitespace": 0,
        "newline-after-var": [2, "always"],
        "one-var": [2, "always"],
        "vars-on-top": 2,
        "curly": [2, "all"],
        "operator-assignment": [2, "always"],
        "space-after-keywords": [2, "always"],
        "brace-style": [2, "1tbs", { "allowSingleLine": false }],
        "wrap-iife": [2, "outside"]
    }
}
